<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="dialog_exit" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <declare-styleable name="RecyclerFastScroller">
        <attr format="color" name="rfs_barColor"/>
        <attr format="color" name="rfs_handleNormalColor"/>
        <attr format="color" name="rfs_handlePressedColor"/>
        <attr format="dimension" name="rfs_touchTargetWidth"/>
        <attr format="integer" name="rfs_hideDelay"/>
        <attr format="boolean" name="rfs_hidingEnabled"/>
    </declare-styleable>

</resources>
