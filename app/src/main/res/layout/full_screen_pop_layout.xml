<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_full_pop">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:padding="@dimen/dp_5"
        android:background="#d0000000">
        <TextView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="背景"
            android:padding="@dimen/dp_5"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color_white"
            android:layout_marginRight="@dimen/dp_10"
            android:id="@+id/iv_theme_menu"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="刷新"
            android:padding="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_10"
            android:textColor="@color/text_color_white"
            android:layout_toLeftOf="@+id/iv_theme_menu"
            android:id="@+id/tv_refresh"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_theme"
        android:visibility="gone"
        android:layout_below="@+id/rl_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_bottom"
        android:layout_alignParentBottom="true"
        android:background="#d0000000"
        android:padding="@dimen/dp_10">
        <LinearLayout
            android:id="@+id/ll_books_chapters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true">
            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_30"
                android:src="@drawable/full_more"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="目录"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ll_save"
            android:layout_centerInParent="true"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_30"
                android:src="@drawable/download"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下载"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/sp_13"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_scroll_orientation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/iv_scroll"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_30"
                android:src="@drawable/scroll_up_down"/>
            <TextView
                android:id="@+id/tv_scroll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="滑动"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
