<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/blue_main">
        <ImageView
            android:visibility="gone"
            android:padding="@dimen/dp_10"
            android:id="@+id/iv_back"
            android:src="@drawable/back_white"
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_title"
            android:text="书城"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textSize="@dimen/sp_20"/>
        <ImageView
            android:visibility="gone"
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"
            android:id="@+id/iv_search"
            android:src="@drawable/search_white"
            android:padding="@dimen/dp_10"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/bt_search_item"
            android:background="@drawable/edit_text_bg"
            android:padding="@dimen/dp_5"
            android:layout_margin="@dimen/dp_5"
            android:layout_centerVertical="true">
            <ImageView
                android:layout_marginRight="@dimen/dp_10"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:padding="@dimen/dp_3"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:background="@drawable/delete_gray"
                android:layout_alignParentRight="true"
                android:id="@+id/iv_delete_item"/>
            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/iv_delete_item"
                android:hint="输入书名或作者，请尽量输入完整"
                android:textSize="@dimen/sp_13"
                android:background="@color/transparent"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/bt_search_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_5"
            android:background="@color/lint_color"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:paddingRight="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_8"
            android:text="搜索"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll_blew"
        android:orientation="vertical">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/lint_color"
            android:padding="@dimen/dp_2"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fl_main"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll_search"
        android:visibility="gone"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5">
            <TextView
                android:layout_width="@dimen/dp_100"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_height="wrap_content"
                android:id="@+id/tv_book_name"
                android:textColor="@color/text_color_black"
                android:text="作品名称"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_author"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="作者"
                android:textColor="@color/text_color_black"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/tv_book_name"
                android:layout_toLeftOf="@+id/tv_recent_time"/>
            <TextView
                android:text="更新时间"
                android:textColor="@color/text_color_black"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:id="@+id/tv_recent_time"/>
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rcv_search"/>
    </LinearLayout>

</LinearLayout>
