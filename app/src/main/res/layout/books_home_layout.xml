<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blue_main">
        <ImageView
            android:visibility="gone"
            android:padding="10dp"
            android:id="@+id/iv_back"
            android:src="@drawable/back_white"
            android:layout_width="50dp"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_title"
            android:text="标题"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textSize="20sp"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/iv_search"
            android:src="@drawable/search_white"
            android:padding="10dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/bt_search_item"
            android:background="@drawable/edit_text_bg"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:layout_centerVertical="true">
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:padding="3dp"
                android:layout_centerVertical="true"
                android:background="@drawable/delete_gray"
                android:layout_alignParentRight="true"
                android:id="@+id/iv_delete_item"/>
            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/iv_delete_item"
                android:hint="输入书名或作者，请尽量输入完整"
                android:textSize="13sp"
                android:background="@color/transparent"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/bt_search_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:background="@color/lint_color"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:text="搜索"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/lint_color"
        android:padding="2dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fl_main"/>

</LinearLayout>
